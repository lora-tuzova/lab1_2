<table class="table-secondary">
    <thead>
        @foreach ((string,string) item in ViewBag.ThisScheme)
        {
            <th>
                @item.Item2
                (@item.Item1)
            </th>
        }
    
    </thead>
    <tbody>
        <a asp-action="Create" asp-controller="Entry" asp-route-dbname="@ViewBag.db" asp-route-tablename="@ViewBag.table">New entry</a>

        @for (int i=0; i< ViewBag.ThisEntries.Count; i++)
        {
            <tr>
                @foreach (string item in ViewBag.ThisEntries[i].Content)
        {
            
                <td>
                    @item
                </td>
        }
                <td>
                    <a asp-action="Edit" asp-controller="Entry" asp-route-id="@i">Edit</a> |
                    <a asp-action="Delete" asp-controller="Table" asp-route-id="@i" asp-route-table="@ViewBag.table" asp-route-db="@ViewBag.db">Delete</a>
                </td>
            </tr>
            
        }

    </tbody>
</table>
<a asp-action="Details" asp-controller="Database" asp-route-id="@ViewBag.db">Back to the database</a>
