@{
    ViewData["Title"] = "Home Page";
}
<a asp-action="Create" asp-controller="Database">New database</a>

<h1>Your databases:</h1>

<table class="table-secondary">
    <thead>
    </thead>
    <tbody>
        @foreach (string item in ViewBag.Databases)
        {
            <tr>
                    <td>
                    @item
                    </td>
                <td>
                    <a asp-action="Details" asp-controller="Database" asp-route-id="@item">Open</a> 
                    @* <a asp-action="Delete" asp-controller="Database" asp-route-id="@item">Drop</a> *@
                </td>
            </tr>
        }

        </tbody>
</table>
