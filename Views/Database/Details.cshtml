

@{
    ViewData["Title"] = ViewBag.DB.Name;
}


<p>
    <a asp-action="Create" asp-controller="Table" asp-route-dbname="@ViewBag.DB.Name">New table</a>
</p>


<table class="table-secondary">
    <thead>
        <link href="css/bootstrap.css/bootstrap.min.css" rel="stylesheet">

    </thead>
    <tbody>
        @foreach (Table item in ViewBag.DB.GetTables())
        {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                    <td>
                    <a asp-action="Edit" asp-controller="Table" asp-route-id="@item.Name">Edit</a> |
                    <a asp-action="Index" asp-controller="Table" asp-route-id="@item.Name" asp-route-db="@item.DBName">Open</a> |
                    <a asp-action="Delete" asp-controller="Database" asp-route-table="@item.Name" asp-route-db="@ViewBag.DB.Name">Drop</a> 
                    </td>
                    </tr>
        }

        </tbody>
</table>

<form asp-action="FindIntersection">
    <div>
        <input type="hidden" name="dbName" value="@ViewBag.DB.Name">
    </div>

    <div>
        <label for="tableName1">Table 1 Name:</label>
        <input type="text" id="tableName1" name="tableName1" required>
    </div>

    <div>
        <label for="tableName2">Table 2 Name:</label>
        <input type="text" id="tableName2" name="tableName2" required>
    </div>

    <button type="submit">Find Intersection</button>
</form>


