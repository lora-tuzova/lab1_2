<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Database</title>
</head>
<body>
    <h1>Create New Database</h1>
    @ViewBag.message
    <form asp-action="Create">
        <label for="name">Database Name:</label>
        <input type="text" id="DBName" name="name" placeholder="Enter database name" required>
        <button type="submit">Submit</button>
    </form>



    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JS (add this before closing </body> tag) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <link href="node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/jungle/bootstrap.min.css" rel="stylesheet">

</body>
</html>
